<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ProgressBar
        android:id="@+id/progressBarCalendar"
        style="?android:attr/progressBarStyle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:indeterminate="true"
        android:visibility="gone" />

    <LinearLayout
        android:id="@+id/contentDailyQuality"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="20dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tvIDtext"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/id_chick" />

            <TextView
                android:id="@+id/tvIDChick"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:text="M001" />

        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginVertical="20dp"
            android:background="#cccccc" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="20dp"
            android:text="จำนวนไข่"
            android:textAlignment="center" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="horizontal">

            <Button
                android:id="@+id/countZero"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:background="@drawable/button_round"
                android:gravity="center_vertical|center_horizontal"
                android:text="0"
                android:textColor="@color/colorBlackGray" />

            <Button
                android:id="@+id/countOne"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:layout_marginHorizontal="16dp"
                android:background="@drawable/button_round"
                android:gravity="center_vertical|center_horizontal"
                android:text="1"
                android:textColor="@color/colorBlackGray" />

            <Button
                android:id="@+id/countTwo"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:background="@drawable/button_round"
                android:gravity="center_vertical|center_horizontal"
                android:text="2"
                android:textColor="@color/colorBlackGray" />

        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginVertical="20dp"
            android:background="#cccccc" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="20dp"
            android:text="คุณภาพของไข่"
            android:textAlignment="center" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="horizontal">

            <Button
                android:id="@+id/qNone"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:background="@drawable/button_round"
                android:gravity="center_vertical|center_horizontal"
                android:text="None"
                android:textColor="@color/colorBlackGray" />

            <Button
                android:id="@+id/qBad"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:layout_marginHorizontal="16dp"
                android:background="@drawable/button_round"
                android:gravity="center_vertical|center_horizontal"
                android:text="Bad"
                android:textColor="@color/colorBlackGray" />

            <Button
                android:id="@+id/qGood"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:background="@drawable/button_round"
                android:gravity="center_vertical|center_horizontal"
                android:text="Good"
                android:textColor="@color/colorBlackGray" />

        </LinearLayout>

        <Button
            android:id="@+id/submitDailyEgg"
            android:layout_width="120dp"
            android:layout_height="60dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginVertical="20dp"
            android:backgroundTint="@color/colorPrimary"
            android:foregroundTint="@color/colorPrimaryDark"
            android:text="Check!!" />

    </LinearLayout>
</FrameLayout>